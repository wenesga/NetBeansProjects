PROGRAM EX5;
USES CRT;
TYPE aluno = RECORD
	numero : INTEGER;
	nome : STRING[20];
	curso: STRING[15];
	nota1, nota2 : REAL;
	ativo: INTEGER;
	END;
classe = FILE OF aluno;
VAR 	ALUNOS, AUXILIAR: classe;
	A, AUX: aluno;
        K, I, P, POSICAO: INTEGER;
	ACHOU : BOOLEAN;
	NUMERO: INTEGER;
	NOME: STRING[20];
CURSO: STRING[15];
NOTA1,NOTA2: REAL;
BEGIN
CLRSCR;
ASSIGN(ALUNOS,'C:\ALUNOS.DAT');
RESET(ALUNOS);
K := FILESIZE(ALUNOS);
 IF K = 0
 THEN WRITELN('N«O EXISTE ALUNO CADASTRADO')
 ELSE BEGIN
        WRITE('DIGITE O NÈMERO DO ALUNO A SER EXCLU÷DO ');
        READLN(NUMERO);
        ACHOU:=FALSE;
    	WHILE (ACHOU = FALSE) AND (NOT EOF(ALUNOS)) DO
     	BEGIN
     	READ(ALUNOS,A);
     	IF (A.NUMERO = NUMERO) AND (A.ATIVO = 1)
     	THEN BEGIN
   		ACHOU := TRUE;
	  	POSICAO := FILEPOS(ALUNOS) -1;
           END;
     	END;
     	IF ACHOU = TRUE
     	THEN BEGIN
		SEEK(ALUNOS, POSICAO);
		A.ATIVO := 0;
		WRITE(ALUNOS,A);
		WRITELN(' ALUNO EXCLU÷DO');
		END
      ELSE WRITELN(' ESTE ALUNO N«O ESTµ CADASTRADO');
      END;
READLN;
CLOSE(ALUNOS);
END.

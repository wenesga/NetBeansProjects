PROGRAM EX6;
USES CRT;
TYPE aluno = RECORD
	numero : INTEGER;
	nome : STRING[20];
	curso: STRING[15];
	nota1, nota2 : REAL;
	END;
classe = FILE OF aluno;
VAR 	ALUNOS: classe;
	A: aluno;
	M,K: REAL;
BEGIN
CLRSCR;
ASSIGN(ALUNOS, 'C:\ALUNOS.DAT');
{$I-}
RESET(ALUNOS);
{$I+}
IF IORESULT = 2
   THEN REWRITE(ALUNOS);
K:=FILESIZE(ALUNOS);
IF K = 0
THEN WRITELN('ARQUIVO DE ALUNOS VAZIO')
ELSE BEGIN
     WHILE NOT EOF(ALUNOS) DO
	BEGIN
	READ(ALUNOS, A);
	WRITELN('NUMERO = ',A.NUMERO);
	WRITELN('NOME = ',A.NOME);
	M:= (A.NOTA1+A.NOTA2)/2;
	WRITELN('MêDIA = ', M:5:2);
        WRITELN('Tecle enter....');
	READLN;
	END;
      END;
READLN;
CLOSE(ALUNOS);
END.

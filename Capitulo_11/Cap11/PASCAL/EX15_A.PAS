     READLN(MES);
     WHILE NOT EOF(L) DO
     BEGIN
     READ(L, V);
     IF (V.CODIGO_VENDEDOR = CODIGO_VENDEDOR) AND (V.MES = MES)
     THEN BEGIN
          WRITELN( 'VALOR DAS VENDAS = R$ ',V.VALOR_VENDA:5:2);
          ACHOU:=1;
          END;
     END;
   IF ACHOU = 0
   THEN WRITELN('N«O EXISTE VENDA CADASTRADA PARA ESTE VENDEDOR NESTE M“S');
   END;
READLN;

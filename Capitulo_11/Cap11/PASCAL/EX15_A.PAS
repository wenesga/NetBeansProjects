{$I+}
IF IORESULT = 2
   THEN REWRITE(L);
K:=FILESIZE(L);
ACHOU:=0;
IF K = 0
THEN WRITELN('ARQUIVO DE VENDAS VAZIO')
ELSE BEGIN
     WRITE('DIGITE O C‡DIGO DO VENDEDOR A SER CONSULTADO ');
     READLN(CODIGO_VENDEDOR);

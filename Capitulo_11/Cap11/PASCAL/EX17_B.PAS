PROGRAM EX17;
USES CRT;
TYPE vendedor = RECORD
	codigo_vendedor: INTEGER;
	nome_vendedor: STRING[20];
	mes: INTEGER;
	valor_venda: REAL;
	ativo: INTEGER;
END;
loja = FILE OF vendedor;
VAR L: loja;
         V: vendedor;
         CODIGO_VENDEDOR, MES: INTEGER;
	MAIOR: REAL;
	NOME_VENDEDOR: STRING[20];
        BEGIN
CLRSCR;
MAIOR:=-1;
WRITE('DIGITE O M“S A SER CONSULTADO ');
READLN(MES);
ASSIGN(L, 'C:\VENDAS.DAT');
{$I-}
RESET(L);
{$I+}
IF IORESULT = 2
   THEN REWRITE(L);
WHILE NOT EOF(L) DO
BEGIN
READ(L, V);
IF (V.MES = MES) AND (V.VALOR_VENDA > MAIOR) AND (V.ATIVO = 1)
THEN BEGIN
     MAIOR := V.VALOR_VENDA;
     NOME_VENDEDOR:=V.NOME_VENDEDOR;
     CODIGO_VENDEDOR:=V.CODIGO_VENDEDOR;
     END;
END;
IF MAIOR = -1
THEN WRITELN('N«O EXISTE VENDA CADASTRADA NESTE M“S')
ELSE BEGIN
     WRITELN('C‡DIGO DO VENDEDOR = ',CODIGO_VENDEDOR);
     WRITELN('NOME DO VENDEDOR = ',NOME_VENDEDOR);
     WRITELN('VALOR DA VENDA = ',MAIOR:7:2);
     END;
READLN;
CLOSE(L);
END.
